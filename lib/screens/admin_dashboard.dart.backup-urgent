      case 'sans_adeti': return 'ðŸŽ² Åžans Adeti Gir';
      case 'bilet_adeti': return 'ðŸŽ« Bilet Adeti Gir';
      case 'liste': return 'ðŸ“‹ Liste';
      case 'kampanya_ismi': return 'ðŸ·ï¸ Kampanya Ä°smi Gir';
      case 'ikramiye_cinsi': return 'ðŸ’Ž Ä°kramiye Cinsi Gir';
      case 'ikramiye_tutari': return 'ðŸ’° Ä°kramiye TutarÄ± Gir';
      case 'bir_alt_ust': return 'âš–ï¸ Bir Alt-Bir Ãœst TanÄ±mla';
      case 'bilet_fiyati': return 'ðŸ’µ Bilet FiyatÄ±';
      case 'giderler': return 'ðŸ“‰ Giderler';
      case 'borclu_olanlar': return 'ðŸ’³ BorÃ§lu Olanlar';
      case 'liste_yayinla': return 'ðŸ“¢ Liste YayÄ±nla';
      case 'yeni_kampanya': return 'ðŸ†• Yeni Kampanya Belirle';
      case 'kampanya_yonetimi': return 'ðŸŽ¯ Kampanya YÃ¶netimi';
      case 'ortak_sayisi': return 'ðŸ‘¥ Ortak SayÄ±sÄ±';
