          ],
        ),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text(
              '${campaign.name} kampanyasÄ±nÄ± silmek istediÄŸinizden emin misiniz?',
              style: TextStyle(fontWeight: FontWeight.bold, fontSize: 16),
            ),
            SizedBox(height: 16),
            
            // Kampanya Ã¶zeti
            Container(
              padding: EdgeInsets.all(12),
              decoration: BoxDecoration(
                color: Colors.grey.withOpacity(0.1),
                borderRadius: BorderRadius.circular(8),
              ),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  Text('ðŸ“Š Kampanya Ã–zeti:', style: TextStyle(fontWeight: FontWeight.bold)),
                  SizedBox(height: 8),
                  Text('ðŸŽ« Toplam Bilet: ${campaignTickets.length}'),
                  Text('ðŸ† Kazanan Bilet: ${winningTickets.length}'),
                  Text('ðŸ”¢ Kazanan Numara: ${campaign.winningNumber}'),
                  Text('ðŸ“… Ã‡ekiliÅŸ: ${campaign.drawDate.day}/${campaign.drawDate.month}/${campaign.drawDate.year}'),
                ],
              ),
            ),
            
            SizedBox(height: 16),
            
            Container(
              padding: EdgeInsets.all(12),
              decoration: BoxDecoration(
                color: Colors.red.withOpacity(0.1),
                borderRadius: BorderRadius.circular(8),
                border: Border.all(color: Colors.red.withOpacity(0.3)),
              ),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  Row(
                    children: [
                      Icon(Icons.warning, color: Colors.red),
                      SizedBox(width: 8),
                      Text(
                        'DÄ°KKAT!',
                        style: TextStyle(fontWeight: FontWeight.bold, color: Colors.red[800]),
                      ),
                    ],
                  ),
                  SizedBox(height: 8),
                  Text(
                    'â€¢ Bu iÅŸlem GERÄ° ALINAMAZ!\n'
                    'â€¢ TÃ¼m kampanya verileri silinecek\n'
                    'â€¢ Bilet kayÄ±tlarÄ± kaybolacak\n'
                    'â€¢ Kazanan bilet listesi kaybolacak',
                    style: TextStyle(color: Colors.red[700]),
                  ),
                ],
              ),
            ),
          ],
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: Text('Ä°ptal'),
          ),
          ElevatedButton(
            onPressed: () async {
              Navigator.pop(context);
              await _deleteCampaign(campaign);
            },
            style: ElevatedButton.styleFrom(
              backgroundColor: Colors.red,
              foregroundColor: Colors.white,
            ),
            child: Text('EVET, SÄ°L'),
          ),
        ],
      ),
    );
  }

  Future<void> _deleteCampaign(Campaign campaign) async {
    try {
      // KampanyayÄ± service'ten sil
      final success = await _campaignService.deleteCampaign(campaign.id);
      
      if (success) {
        setState(() {});
        
        // BaÅŸarÄ± mesajÄ± gÃ¶ster
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('âœ… ${campaign.name} kampanyasÄ± baÅŸarÄ±yla silindi!'),
            backgroundColor: Colors.green,
            duration: Duration(seconds: 3),
          ),
        );
        
        // Konfeti animasyonu gÃ¶ster
        _showSuccessAnimation();
        
      } else {
        // Hata mesajÄ± gÃ¶ster
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('âŒ Kampanya silinirken hata oluÅŸtu!'),
            backgroundColor: Colors.red,
            duration: Duration(seconds: 3),
          ),
        );
      }
    } catch (e) {
      // Beklenmeyen hata
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text('âŒ Beklenmeyen hata: $e'),
          backgroundColor: Colors.red,
          duration: Duration(seconds: 3),
        ),
      );
    }
  }

