  void _showCampaignDetails(Campaign campaign) {
    final stats = _campaignService.getTicketStats(campaign.id);
    
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Text('ðŸŽ¯ ${campaign.name}'),
        content: SingleChildScrollView(
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            mainAxisSize: MainAxisSize.min,
            children: [
              _buildDetailRow('ðŸ“Š Durum', campaign.isCompleted ? 'TamamlandÄ±' : 'Aktif'),
              _buildDetailRow('ðŸ“… Hafta', 'Hafta ${campaign.weekNumber}'),
              _buildDetailRow('ðŸ”¢ Hane SayÄ±sÄ±', '${campaign.lastDigitCount} haneli'),
              _buildDetailRow('ðŸŽ² Åžans SayÄ±sÄ±', '${campaign.chanceCount} ÅŸans'),
              _buildDetailRow('ðŸŽ« Toplam Bilet', '${stats['total']}'),
              _buildDetailRow('ðŸ’° Bilet FiyatÄ±', '${campaign.ticketPrice.toStringAsFixed(0)} â‚º'),
              _buildDetailRow('ðŸ† Ana Ä°kramiye', '${campaign.prizeAmount}'),
              _buildDetailRow('â¬†ï¸ Bir Ãœst Ä°kramiye', '${campaign.upperPrize}'),
              _buildDetailRow('â¬‡ï¸ Bir Alt Ä°kramiye', '${campaign.lowerPrize}'),
              
              SizedBox(height: 16),
              
              Text('ðŸ“ˆ SatÄ±ÅŸ Ä°statistikleri:', style: TextStyle(fontWeight: FontWeight.bold)),
              SizedBox(height: 8),
              _buildDetailRow('âœ… SatÄ±lan Bilet', '${stats['sold']}'),
              _buildDetailRow('ðŸ’µ Ã–denen Bilet', '${stats['paid']}'),
              _buildDetailRow('â³ MÃ¼sait Bilet', '${stats['available']}'),
              _buildDetailRow('âŒ Ä°ptal Edilen', '${stats['cancelled']}'),
              
              if (campaign.isCompleted && campaign.winningNumber != null) ...[
                SizedBox(height: 16),
                Container(
                  padding: EdgeInsets.all(12),
                  decoration: BoxDecoration(
                    color: Colors.purple.withOpacity(0.1),
                    borderRadius: BorderRadius.circular(8),
                  ),
                  child: Column(
                    crossAxisAlignment: CrossAxisAlignment.start,
                    children: [
                      Text('ðŸŽ‰ Ã‡ekiliÅŸ Sonucu:', style: TextStyle(fontWeight: FontWeight.bold)),
                      SizedBox(height: 8),
                      Text('Kazanan Numara: ${campaign.winningNumber}', 
                           style: TextStyle(fontSize: 18, fontWeight: FontWeight.bold, color: Colors.purple)),
                      Text('Kazanan Bilet: ${stats['winners']} adet'),
                    ],
                  ),
                ),
              ],
            ],
          ),
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: Text('Kapat'),
          ),
          if (!campaign.isCompleted)
            ElevatedButton(
              onPressed: () {
                Navigator.pop(context);
                _finishCampaign(campaign);
              },
              style: ElevatedButton.styleFrom(
                backgroundColor: Colors.red,
                foregroundColor: Colors.white,
              ),
              child: Text('KampanyayÄ± Bitir'),
            ),
        ],
      ),
    );
  }

  Widget _buildDetailRow(String label, String value) {
    return Padding(
      padding: EdgeInsets.symmetric(vertical: 4),
      child: Row(
        children: [
          SizedBox(
            width: 140,
            child: Text(label, style: TextStyle(fontWeight: FontWeight.w500)),
          ),
          Expanded(child: Text(value)),
        ],
      ),
    );
  }

  Widget _buildTicketListItem(Ticket ticket) {
    Color backgroundColor;
    Color textColor = Colors.black;
    String statusText;
    bool isClickable = true; // TÃ¼m biletler tÄ±klanabilir

    // Durum ve renk belirleme
    switch (ticket.status) {
      case TicketStatus.available:
        backgroundColor = Colors.grey[100]!;
        statusText = 'MÃ¼sait';
        break;
      case TicketStatus.sold:
        // SatÄ±lan Ã¶denmeyen: yarÄ±sÄ± yeÅŸil yarÄ±sÄ± kÄ±rmÄ±zÄ±
        backgroundColor = Colors.orange[100]!;
        statusText = 'Ã–denmedi';
        break;
      case TicketStatus.unpaid:
        backgroundColor = Colors.orange[100]!;
        statusText = 'Ã–denmedi';
        break;
      case TicketStatus.paid:
        backgroundColor = Colors.green[100]!;
        statusText = 'Ã–dendi';
        break;
      case TicketStatus.cancelled:
        backgroundColor = Colors.red[300]!;
        statusText = 'Ä°ptal Edildi';
        textColor = Colors.white;
        break;
      case TicketStatus.winner:
        backgroundColor = Colors.purple[100]!;
        statusText = 'Kazanan';
        break;
    }

    return Card(
      margin: EdgeInsets.symmetric(horizontal: 8, vertical: 4),
      child: InkWell(
        onTap: isClickable ? () => _showTicketStatusDialog(ticket) : null,
        child: Container(
          decoration: BoxDecoration(
            color: backgroundColor,
            borderRadius: BorderRadius.circular(4),
            // SatÄ±lan Ã¶denmemiÅŸ iÃ§in Ã¶zel gradient
            gradient: ticket.status == TicketStatus.sold
                ? LinearGradient(
                    colors: [Colors.green[200]!, Colors.red[200]!],
                    stops: [0.5, 0.5],
                    begin: Alignment.centerLeft,
                    end: Alignment.centerRight,
                  )
                : null,
          ),
          child: ListTile(
            leading: Container(
              width: 60,
              height: 60,
              decoration: BoxDecoration(
                color: ticket.status == TicketStatus.available
                    ? Colors.grey
                    : ticket.status == TicketStatus.sold
                        ? Colors.orange
                        : ticket.status == TicketStatus.paid
                            ? Colors.green
                            : Colors.red,
                shape: BoxShape.circle,
              ),
              child: Center(
                child: Text(
                  ticket.numbersFormatted,
                  style: TextStyle(
                    color: Colors.white,
                    fontWeight: FontWeight.bold,
                    fontSize: 10,
                  ),
                  textAlign: TextAlign.center,
                ),
              ),
            ),
            title: Text(
              '${ticket.numbersFormatted}',
              style: TextStyle(
                fontWeight: FontWeight.bold,
                color: textColor,
                fontSize: 18,
              ),
            ),
            subtitle: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(
                  'Durum: $statusText',
                  style: TextStyle(color: textColor.withOpacity(0.8)),
                ),
                if (ticket.buyerName != null)
                  Text(
                    'AlÄ±cÄ±: ${ticket.buyerName}',
                    style: TextStyle(color: textColor.withOpacity(0.8)),
                  ),
                if (ticket.buyerPhone != null)
                  Text(
                    'Telefon: ${ticket.buyerPhone}',
                    style: TextStyle(color: textColor.withOpacity(0.8)),
                  ),
              ],
            ),
            trailing: Column(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                Text(
                  '${ticket.price.toStringAsFixed(0)} â‚º',
                  style: TextStyle(
                    fontWeight: FontWeight.bold,
                    fontSize: 16,
                    color: textColor,
                  ),
                ),
                if (isClickable)
                  Icon(
                    Icons.edit,
                    size: 16,
                    color: textColor.withOpacity(0.6),
                  ),
              ],
            ),
          ),
        ),
      ),
    );
  }

  void _showTicketStatusDialog(Ticket ticket) {
    final nameController = TextEditingController(text: ticket.buyerName ?? '');
    final phoneController = TextEditingController(text: ticket.buyerPhone ?? '');
    
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Text('ðŸŽ« Bilet Durumu GÃ¼ncelle'),
        content: SingleChildScrollView(
          child: Column(
            mainAxisSize: MainAxisSize.min,
            children: [
              Text('Numaralar: ${ticket.numbersFormatted}', 
                   style: TextStyle(fontSize: 16, fontWeight: FontWeight.bold)),
              SizedBox(height: 16),
              Container(
                padding: EdgeInsets.all(12),
                decoration: BoxDecoration(
                  color: _getStatusColor(ticket.status),
                  borderRadius: BorderRadius.circular(8),
                ),
                child: Row(
                  children: [
                    Icon(_getStatusIcon(ticket.status), color: Colors.white),
                    SizedBox(width: 8),
                    Expanded(
                      child: Text(
                        'Mevcut Durum: ${_getStatusText(ticket.status)}',
                        style: TextStyle(color: Colors.white, fontWeight: FontWeight.bold),
                      ),
                    ),
                  ],
                ),
              ),
              SizedBox(height: 24),
              
              // Ad Soyad alanÄ± (isteÄŸe baÄŸlÄ±)
              TextField(
                controller: nameController,
                decoration: InputDecoration(
                  labelText: 'Ad Soyad (Ä°steÄŸe baÄŸlÄ±)',
                  hintText: 'MÃ¼ÅŸteri adÄ±nÄ± girebilirsiniz',
                  border: OutlineInputBorder(),
                  prefixIcon: Icon(Icons.person_outline),
                ),
              ),
              SizedBox(height: 16),
              
              // Telefon alanÄ± (isteÄŸe baÄŸlÄ±)
              TextField(
                controller: phoneController,
                decoration: InputDecoration(
                  labelText: 'Telefon (Ä°steÄŸe baÄŸlÄ±)',
                  hintText: '05XXXXXXXXX',
                  border: OutlineInputBorder(),
                  prefixIcon: Icon(Icons.phone_outlined),
                ),
                keyboardType: TextInputType.phone,
              ),
              SizedBox(height: 24),
              
              Text('Yeni durum seÃ§in:', style: TextStyle(fontWeight: FontWeight.bold)),
            ],
          ),
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: Text('Ä°ptal'),
          ),
          // MÃ¼sait durumu iÃ§in buton
          if (ticket.status != TicketStatus.available)
            ElevatedButton(
              onPressed: () {
                _updateTicketStatusWithInfo(ticket, TicketStatus.available, nameController.text.trim(), phoneController.text.trim());
                Navigator.pop(context);
              },
              style: ElevatedButton.styleFrom(backgroundColor: Colors.grey),
              child: Text('MÃ¼sait'),
            ),
          // SatÄ±ldÄ± (Ã–denmedi) butonu
          ElevatedButton(
            onPressed: () {
              // Ã–denmedi durumu iÃ§in isim zorunlu
              if (nameController.text.trim().isEmpty) {
                ScaffoldMessenger.of(context).showSnackBar(
                  SnackBar(
                    content: Text('âŒ BorÃ§lu iÅŸaretlemek iÃ§in en az isim bilgisi gereklidir'),
                    backgroundColor: Colors.red,
                  ),
                );
                return;
              }
              _updateTicketStatusWithInfo(ticket, TicketStatus.sold, nameController.text.trim(), phoneController.text.trim());
              Navigator.pop(context);
            },
            style: ElevatedButton.styleFrom(backgroundColor: Colors.orange),
            child: Text('Ã–denmedi'),
          ),
          // Ã–dendi butonu
          ElevatedButton(
            onPressed: () {
              _updateTicketStatusWithInfo(ticket, TicketStatus.paid, nameController.text.trim(), phoneController.text.trim());
              Navigator.pop(context);
            },
            style: ElevatedButton.styleFrom(backgroundColor: Colors.green),
            child: Text('Ã–dendi'),
          ),
          // Ä°ptal butonu
          if (ticket.status != TicketStatus.available)
            ElevatedButton(
              onPressed: () {
                _updateTicketStatusWithInfo(ticket, TicketStatus.cancelled, nameController.text.trim(), phoneController.text.trim());
                Navigator.pop(context);
              },
              style: ElevatedButton.styleFrom(backgroundColor: Colors.red),
              child: Text('Ä°ptal Et'),
            ),
        ],
      ),
    );
  }

  Color _getStatusColor(TicketStatus status) {
    switch (status) {
      case TicketStatus.available:
        return Colors.grey;
      case TicketStatus.sold:
        return Colors.orange;
      case TicketStatus.unpaid:
        return Colors.orange;
      case TicketStatus.paid:
        return Colors.green;
      case TicketStatus.cancelled:
        return Colors.red;
      case TicketStatus.winner:
        return Colors.purple;
    }
  }

  IconData _getStatusIcon(TicketStatus status) {
    switch (status) {
      case TicketStatus.available:
        return Icons.sell_outlined;
      case TicketStatus.sold:
        return Icons.payment;
      case TicketStatus.unpaid:
        return Icons.schedule;
      case TicketStatus.paid:
        return Icons.check_circle;
      case TicketStatus.cancelled:
        return Icons.cancel;
      case TicketStatus.winner:
        return Icons.emoji_events;
    }
  }

  String _getStatusText(TicketStatus status) {
    switch (status) {
      case TicketStatus.available:
        return 'MÃ¼sait';
      case TicketStatus.sold:
        return 'Ã–denmedi';
      case TicketStatus.unpaid:
        return 'Ã–denmedi';
      case TicketStatus.paid:
        return 'Ã–dendi';
      case TicketStatus.cancelled:
        return 'Ä°ptal Edildi';
      case TicketStatus.winner:
        return 'Kazanan';
    }
  }

  void _updateTicketStatus(Ticket ticket, TicketStatus newStatus) {
    // EÄŸer iptal ediliyorsa otomatik olarak satÄ±labilir duruma geÃ§ir
    if (newStatus == TicketStatus.cancelled) {
      newStatus = TicketStatus.available;
      
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text('âœ… Bilet iptal edildi ve satÄ±lmak iÃ§in listeye geri eklendi'),
          backgroundColor: Colors.orange,
        ),
      );
    }

    // GerÃ§ek veri gÃ¼ncellemesi - sample biletlerde bu bileti bul ve gÃ¼ncelle
    final ticketIndex = _sampleTickets.indexWhere((t) => t.id == ticket.id);
    
    if (ticketIndex != -1) {
      // Sample biletlerde gÃ¼ncelleme yap
      _sampleTickets[ticketIndex] = _sampleTickets[ticketIndex].copyWith(
        status: newStatus,
        buyerName: newStatus == TicketStatus.available ? null : _sampleTickets[ticketIndex].buyerName,
        buyerPhone: newStatus == TicketStatus.available ? null : _sampleTickets[ticketIndex].buyerPhone,
      );
    }

    // Ticket service Ã¼zerinden gÃ¼ncelleme yap
    _ticketService.updateTicketStatus(
      ticketId: ticket.id,
      status: newStatus,
      buyerName: newStatus == TicketStatus.available ? null : ticket.buyerName,
      buyerPhone: newStatus == TicketStatus.available ? null : ticket.buyerPhone,
    );

    setState(() {
      // UI'Ä± gerÃ§ekten gÃ¼ncelle
    });

    // EÄŸer bilet satÄ±ldÄ± durumuna geÃ§iyorsa ve alÄ±cÄ± bilgisi yoksa sor
    if (newStatus == TicketStatus.sold && ticket.buyerName == null) {
      _showBuyerInfoDialog(ticket);
      return;
    }

    if (newStatus != TicketStatus.available) {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text('âœ… Bilet durumu gÃ¼ncellendi: ${_getStatusText(newStatus)}'),
          backgroundColor: Colors.green,
        ),
      );
    }
  }

  void _updateTicketStatusWithInfo(Ticket ticket, TicketStatus newStatus, String? name, String? phone) {
    // BoÅŸ stringleri null yap
    final buyerName = name?.isNotEmpty == true ? name : null;
    final buyerPhone = phone?.isNotEmpty == true ? phone : null;

    // EÄŸer iptal ediliyorsa otomatik olarak satÄ±labilir duruma geÃ§ir
    if (newStatus == TicketStatus.cancelled) {
      newStatus = TicketStatus.available;
      
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text('âœ… Bilet iptal edildi ve satÄ±lmak iÃ§in listeye geri eklendi'),
          backgroundColor: Colors.orange,
        ),
      );
    }

    // GerÃ§ek veri gÃ¼ncellemesi - sample biletlerde bu bileti bul ve gÃ¼ncelle
    final ticketIndex = _sampleTickets.indexWhere((t) => t.id == ticket.id);
    
    if (ticketIndex != -1) {
      // Sample biletlerde gÃ¼ncelleme yap
      final updatedTicket = _sampleTickets[ticketIndex].copyWith(
        status: newStatus,
        buyerName: newStatus == TicketStatus.available ? null : buyerName,
        buyerPhone: newStatus == TicketStatus.available ? null : buyerPhone,
        soldAt: newStatus == TicketStatus.sold ? DateTime.now() : null,
        paidAt: newStatus == TicketStatus.paid ? DateTime.now() : null,
      );
      _sampleTickets[ticketIndex] = updatedTicket;
      
      // Campaign service'deki global bilet listesine de gÃ¼ncelle
      _campaignService.updateTicket(updatedTicket);
    }

    // Ticket service Ã¼zerinden gÃ¼ncelleme yap
    _ticketService.updateTicketStatus(
      ticketId: ticket.id,
      status: newStatus,
      buyerName: newStatus == TicketStatus.available ? null : buyerName,
      buyerPhone: newStatus == TicketStatus.available ? null : buyerPhone,
    );

    setState(() {
      // UI'Ä± gerÃ§ekten gÃ¼ncelle
    });

    // Durum mesajÄ± gÃ¶ster
    String statusMessage = 'âœ… Bilet durumu gÃ¼ncellendi: ${_getStatusText(newStatus)}';
    if (buyerName != null || buyerPhone != null) {
      statusMessage += '\nðŸ‘¤ MÃ¼ÅŸteri bilgileri kaydedildi';
    }

    if (newStatus != TicketStatus.available) {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text(statusMessage),
          backgroundColor: Colors.green,
          duration: Duration(seconds: 3),
        ),
      );
    }
  }

  void _showBuyerInfoDialog(Ticket ticket) {
    final nameController = TextEditingController();
    final phoneController = TextEditingController();

    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Text('ðŸ‘¤ AlÄ±cÄ± Bilgileri - ${ticket.numbersFormatted}'),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            TextField(
              controller: nameController,
              decoration: InputDecoration(
                labelText: 'Ad Soyad',
                border: OutlineInputBorder(),
              ),
            ),
            SizedBox(height: 16),
            TextField(
              controller: phoneController,
              decoration: InputDecoration(
                labelText: 'Telefon',
                border: OutlineInputBorder(),
              ),
              keyboardType: TextInputType.phone,
            ),
          ],
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: Text('Ä°ptal'),
          ),
          ElevatedButton(
            onPressed: () {
              // Sample biletlerde alÄ±cÄ± bilgilerini gÃ¼ncelle
              final ticketIndex = _sampleTickets.indexWhere((t) => t.id == ticket.id);
              
              if (ticketIndex != -1) {
                _sampleTickets[ticketIndex] = _sampleTickets[ticketIndex].copyWith(
                  status: TicketStatus.sold,
                  buyerName: nameController.text.isNotEmpty ? nameController.text : null,
                  buyerPhone: phoneController.text.isNotEmpty ? phoneController.text : null,
                );
              }
              
              // Ticket service Ã¼zerinden gÃ¼ncelleme yap
              _ticketService.updateTicketStatus(
                ticketId: ticket.id,
                status: TicketStatus.sold,
                buyerName: nameController.text.isNotEmpty ? nameController.text : null,
                buyerPhone: phoneController.text.isNotEmpty ? phoneController.text : null,
              );
              
              setState(() {
                // UI'Ä± gÃ¼ncelle
              });
              Navigator.pop(context);
              
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(
                  content: Text('âœ… AlÄ±cÄ± bilgileri kaydedildi'),
                  backgroundColor: Colors.green,
                ),
              );
            },
            child: Text('Kaydet'),
          ),
        ],
      ),
    );
  }

  void _finishCampaign(Campaign campaign) {
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Text('ðŸ”š KampanyayÄ± Bitir'),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            Text('${campaign.name} kampanyasÄ±nÄ± bitirmek istediÄŸinizden emin misiniz?'),
            SizedBox(height: 16),
            Container(
              padding: EdgeInsets.all(12),
              decoration: BoxDecoration(
                color: Colors.orange.withOpacity(0.1),
                borderRadius: BorderRadius.circular(8),
              ),
              child: Row(
                children: [
                  Icon(Icons.info, color: Colors.orange),
                  SizedBox(width: 8),
                  Expanded(
                    child: Text(
                      'Kampanya bittiÄŸinde otomatik olarak Milli Piyango sonuÃ§larÄ± Ã§ekilecek.',
                      style: TextStyle(color: Colors.orange[800]),
                    ),
                  ),
                ],
              ),
            ),
          ],
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: Text('Ä°ptal'),
          ),
          ElevatedButton(
            onPressed: () async {
              Navigator.pop(context);
              
              // Milli Piyango sonucunu Ã§ek
              final winningNumber = await _fetchMilliPiyangoResult();
              
              // Ã‡ekiliÅŸ yap
              final result = await _campaignService.conductDraw(campaign.id, winningNumber);
              
              if (result['success']) {
                setState(() {});
                
                ScaffoldMessenger.of(context).showSnackBar(
                  SnackBar(
                    content: Text('âœ… Kampanya tamamlandÄ±! Kazanan numara: ${result['winningNumber']}'),
                    backgroundColor: Colors.green,
                    duration: Duration(seconds: 4),
                  ),
                );
                

              } else {
                ScaffoldMessenger.of(context).showSnackBar(
                  SnackBar(
                    content: Text('âŒ Kampanya bitirme hatasÄ±: ${result['error']}'),
                    backgroundColor: Colors.red,
                  ),
                );
              }
            },
            style: ElevatedButton.styleFrom(
              backgroundColor: Colors.red,
              foregroundColor: Colors.white,
            ),
            child: Text('Evet, Bitir'),
          ),
        ],
      ),
    );
  }

  // Milli Piyango sonucunu Ã§ek (gerÃ§ek entegrasyon)
  Future<String> _fetchMilliPiyangoResult() async {
    // YÃ¼kleme dialog'u gÃ¶ster
    showDialog(
      context: context,
      barrierDismissible: false,
      builder: (context) => AlertDialog(
        content: Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            CircularProgressIndicator(),
            SizedBox(height: 16),
            Text(
              'Milli Piyango sitesinden sonuÃ§ Ã§ekiliyor...',
              style: TextStyle(fontSize: 16),
            ),
            SizedBox(height: 8),
            Text(
              'Bu iÅŸlem birkaÃ§ saniye sÃ¼rebilir',
              style: TextStyle(fontSize: 12, color: Colors.grey[600]),
            ),
          ],
        ),
      ),
    );

    try {
      // GerÃ§ek Milli Piyango API'sini kontrol et
      final isAPIAvailable = await _milliPiyangoService.checkAPIAvailability();
      
      if (isAPIAvailable) {
        // GerÃ§ek API'den sonuÃ§ Ã§ek
        final result = await _milliPiyangoService.fetchAutomaticResult();
        
        // Dialog'u kapat
        Navigator.pop(context);
        
        // BaÅŸarÄ± mesajÄ± gÃ¶ster
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('âœ… Milli Piyango sonucu baÅŸarÄ±yla alÄ±ndÄ±!'),
            backgroundColor: Colors.green,
            duration: Duration(seconds: 2),
          ),
        );
        
        return result.winningNumber;
      } else {
        // API mevcut deÄŸilse manuel simÃ¼lasyon yap
        final result = await _milliPiyangoService.fetchLatestResult();
        
        // Dialog'u kapat
        Navigator.pop(context);
        
        // UyarÄ± mesajÄ± gÃ¶ster
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('âš ï¸ Milli Piyango API\'sine ulaÅŸÄ±lamadÄ±, simÃ¼lasyon numarasÄ± kullanÄ±ldÄ±.'),
            backgroundColor: Colors.orange,
            duration: Duration(seconds: 3),
          ),
        );
        
        return result;
      }
    } catch (e) {
      // Dialog'u kapat
      Navigator.pop(context);
      
      // Hata mesajÄ± gÃ¶ster
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text('âŒ Milli Piyango sonucu alÄ±namadÄ±: $e'),
          backgroundColor: Colors.red,
          duration: Duration(seconds: 3),
        ),
      );
      
      // Hata durumunda rastgele numara dÃ¶ndÃ¼r
      final random = Random();
      String result = '';
      for (int i = 0; i < 10; i++) {
        result += random.nextInt(10).toString();
      }
      return result;
    }
  }





  void _showDrawResultDialog(Campaign campaign) {
    final resultController = TextEditingController();
    
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Text('ðŸŽ° Ã‡ekiliÅŸ Sonucu Gir'),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            Text(
              '${campaign.name} kampanyasÄ± iÃ§in kazanan numarayÄ± girin:',
              style: TextStyle(fontSize: 16),
            ),
            SizedBox(height: 16),
            TextField(
              controller: resultController,
              decoration: InputDecoration(
                labelText: 'Milli Piyango Kazanan Numara',
                hintText: 'Ã–rnek: 8754295 (tam numara) veya 95 (son 2 hane)',
                border: OutlineInputBorder(),
                prefixIcon: Icon(Icons.confirmation_number),
              ),
              maxLines: 2,
            textCapitalization: TextCapitalization.sentences,
            ),
            SizedBox(height: 16),
            Container(
              padding: EdgeInsets.all(12),
              decoration: BoxDecoration(
                color: Colors.blue.withOpacity(0.1),
                borderRadius: BorderRadius.circular(8),
              ),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  Row(
                    children: [
                      Icon(Icons.info, color: Colors.blue),
                      SizedBox(width: 8),
                      Text(
                        'AkÄ±llÄ± Numara TanÄ±ma:',
                        style: TextStyle(fontWeight: FontWeight.bold, color: Colors.blue[800]),
                      ),
                    ],
                  ),
                  SizedBox(height: 8),
                  Text(
                    'ðŸŽ¯ Kampanya ${campaign.lastDigitCount} haneli sistemde Ã§alÄ±ÅŸÄ±r\n'
                    'ðŸ“± Milli Piyango tam numarasÄ±nÄ± girebilirsiniz (Ã¶r: 8754295)\n'
                    'ðŸ”¢ Sistem otomatik son ${campaign.lastDigitCount} haneyi alÄ±r (95)\n'
                    'âœ¨ KÄ±sa numara da girebilirsiniz (Ã¶r: direkt 95)\n'
                    'ðŸ† EÅŸleÅŸen tÃ¼m biletler otomatik bulunur',
                    style: TextStyle(color: Colors.blue[700]),
                  ),
                ],
              ),
            ),
          ],
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: Text('Ä°ptal'),
          ),
          ElevatedButton(
            onPressed: () {
              final result = resultController.text.trim();
              if (result.isEmpty) {
                ScaffoldMessenger.of(context).showSnackBar(
                  SnackBar(content: Text('âŒ LÃ¼tfen kazanan numarayÄ± girin')),
                );
                return;
              }
              
              // Otomatik son hane alma - Milli Piyango mantÄ±ÄŸÄ±
              String finalWinningNumber;
              if (result.length > campaign.lastDigitCount) {
                // Uzun numara girildiyse son N haneyi al
                finalWinningNumber = result.substring(result.length - campaign.lastDigitCount);
                
                // Admin'e bilgi ver
                ScaffoldMessenger.of(context).showSnackBar(
                  SnackBar(
                    content: Text('â„¹ï¸ Milli Piyango numarasÄ±: $result â†’ Son ${campaign.lastDigitCount} hane: $finalWinningNumber'),
                    backgroundColor: Colors.blue,
                    duration: Duration(seconds: 3),
                  ),
                );
              } else if (result.length == campaign.lastDigitCount) {
                // DoÄŸru uzunlukta girildiyse direkt kullan
                finalWinningNumber = result;
              } else {
                // Ã‡ok kÄ±sa girildiyse hata
                ScaffoldMessenger.of(context).showSnackBar(
                  SnackBar(content: Text('âŒ Numara en az ${campaign.lastDigitCount} haneli olmalÄ±dÄ±r')),
                );
                return;
              }
              
              Navigator.pop(context);
              _processDrawResult(campaign, finalWinningNumber);
            },
            style: ElevatedButton.styleFrom(
              backgroundColor: Colors.green,
              foregroundColor: Colors.white,
            ),
            child: Text('Sonucu Kaydet'),
          ),
        ],
      ),
    );
  }

  void _processDrawResult(Campaign campaign, String winningNumber) async {
    // Ã‡ekiliÅŸ sonucunu iÅŸle
    final result = await _campaignService.conductDraw(campaign.id, winningNumber);
    
    if (result['success']) {
      setState(() {});
      
      final mainWinners = result['mainWinners'] ?? 0;
      final upperWinners = result['upperWinners'] ?? 0;
      final lowerWinners = result['lowerWinners'] ?? 0;
      final totalWinners = mainWinners + upperWinners + lowerWinners;
      
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text(
            'ðŸŽ‰ Ã‡ekiliÅŸ tamamlandÄ±!\n'
            'ðŸ† Ana kazanan: $mainWinners bilet\n'
            'â¬†ï¸ Bir Ã¼st: $upperWinners bilet\n'
            'â¬‡ï¸ Bir alt: $lowerWinners bilet\n'
            'ðŸŽ¯ Toplam: $totalWinners Talihli bilet!'
          ),
          backgroundColor: Colors.green,
          duration: Duration(seconds: 5),
        ),
      );
      
      // KONFETI ANIMASYONU! ðŸŽŠ
      if (totalWinners > 0) {
        _showConfettiCelebration();
        
        // 2 saniye sonra kazanan biletleri gÃ¶ster
        Future.delayed(Duration(seconds: 2), () {
          _showWinningTickets(campaign);
        });
      } else {
        // Kazanan yoksa hemen gÃ¶ster
        _showWinningTickets(campaign);
      }
    } else {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text('âŒ Ã‡ekiliÅŸ hatasÄ±: ${result['error']}'),
          backgroundColor: Colors.red,
        ),
      );
    }
  }

  void _showWinningTickets(Campaign campaign) {
    final campaignTickets = _campaignService.getCampaignTickets(campaign.id);
    final winningTickets = campaignTickets.where((ticket) => ticket.isWinner).toList();
    
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Text('ðŸŒŸ ${campaign.name} - Talihli Biletler'),
        content: Container(
          width: double.maxFinite,
          height: 400,
          child: Column(
            children: [
              Container(
                padding: EdgeInsets.all(16),
                decoration: BoxDecoration(
                  gradient: LinearGradient(
                    colors: [Colors.purple.withOpacity(0.1), Colors.amber.withOpacity(0.1)],
                  ),
                  borderRadius: BorderRadius.circular(8),
                ),
                child: Row(
                  children: [
                    Icon(Icons.emoji_events, color: Colors.amber, size: 32),
                    SizedBox(width: 16),
                    Expanded(
                      child: Column(
                        crossAxisAlignment: CrossAxisAlignment.start,
                        children: [
                          Text(
                            '${campaign.name} KazananlarÄ±',
                            style: TextStyle(
                              fontSize: 18,
                              fontWeight: FontWeight.bold,
                              color: Colors.purple[800],
                            ),
                          ),
                          Text(
                            'Kazanan Numara: ${campaign.winningNumber}',
                            style: TextStyle(color: Colors.grey[600]),
                          ),
                          Text(
                            'Toplam ${winningTickets.length} Talihli Bilet',
                            style: TextStyle(
                              fontWeight: FontWeight.bold,
                              color: Colors.green[700],
                            ),
                          ),
                        ],
                      ),
                    ),
                  ],
                ),
              ),
              
              SizedBox(height: 16),
              
              Expanded(
                child: winningTickets.isEmpty
                    ? Center(
                        child: Column(
                          mainAxisAlignment: MainAxisAlignment.center,
                          children: [
                            Icon(Icons.search_off, size: 64, color: Colors.grey),
                            SizedBox(height: 16),
                            Text(
                              'Bu kampanyada kazanan bilet bulunamadÄ±',
                              style: TextStyle(fontSize: 16, color: Colors.grey[600]),
                            ),
                            SizedBox(height: 8),
                            Text(
                              'Ã‡ekiliÅŸ sonucu: ${campaign.winningNumber ?? "HenÃ¼z Ã§ekilmedi"}',
                              style: TextStyle(color: Colors.grey[500]),
                            ),
                          ],
                        ),
                      )
                    : ListView.builder(
                        itemCount: winningTickets.length,
                        itemBuilder: (context, index) {
                          final ticket = winningTickets[index];
                          return _buildWinningTicketCard(ticket, campaign);
                        },
                      ),
              ),
            ],
          ),
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: Text('Kapat'),
          ),
          ElevatedButton.icon(
            onPressed: () {
              Navigator.pop(context);
              _exportWinningTickets(campaign, winningTickets);
            },
            icon: Icon(Icons.download),
            label: Text('Listeyi DÄ±ÅŸa Aktar'),
            style: ElevatedButton.styleFrom(
              backgroundColor: Colors.blue,
              foregroundColor: Colors.white,
            ),
          ),
        ],
      ),
    );
  }

  Widget _buildWinningTicketCard(Ticket ticket, Campaign campaign) {
    String winTypeText = '';
    Color winColor = Colors.purple;
    String prizeText = '';
    
    switch (ticket.winnerType) {
      case 'main':
        winTypeText = 'ðŸ† Ana Ä°kramiye';
        winColor = Colors.amber;
        prizeText = _getCampaignPrizeText(campaign);
        break;
      case 'upper':
        winTypeText = 'â¬†ï¸ Bir Ãœst';
        winColor = Colors.green;
        prizeText = '${campaign.upperPrize} ${_getCurrencySymbol(campaign)}';
        break;
      case 'lower':
        winTypeText = 'â¬‡ï¸ Bir Alt';
        winColor = Colors.blue;
        prizeText = '${campaign.lowerPrize} ${_getCurrencySymbol(campaign)}';
        break;
      default:
        winTypeText = 'ðŸŽ¯ Kazanan';
        winColor = Colors.purple;
    }
    
    return Card(
      elevation: 4,
      margin: EdgeInsets.only(bottom: 8),
      child: Container(
        decoration: BoxDecoration(
          borderRadius: BorderRadius.circular(8),
          gradient: LinearGradient(
            colors: [winColor.withOpacity(0.1), Colors.white],
            begin: Alignment.centerLeft,
            end: Alignment.centerRight,
          ),
        ),
        child: ListTile(
          leading: Container(
            width: 50,
            height: 50,
            decoration: BoxDecoration(
              color: winColor,
              shape: BoxShape.circle,
            ),
            child: Icon(Icons.star, color: Colors.white, size: 24),
          ),
          title: Text(
            'Bilet: ${ticket.numbersFormatted}',
            style: TextStyle(fontWeight: FontWeight.bold),
          ),
          subtitle: Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              Text(winTypeText, style: TextStyle(color: winColor, fontWeight: FontWeight.bold)),
              if (ticket.buyerName != null) Text('ðŸ‘¤ ${ticket.buyerName}'),
              if (ticket.buyerPhone != null) Text('ðŸ“ž ${ticket.buyerPhone}'),
            ],
          ),
          trailing: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Text(
                'Ä°kramiye',
                style: TextStyle(fontSize: 12, color: Colors.grey[600]),
              ),
              Text(
                prizeText,
                style: TextStyle(
                  fontWeight: FontWeight.bold,
                  color: winColor,
                  fontSize: 14,
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }

  String _getCurrencySymbol(Campaign campaign) {
    switch (campaign.prizeCurrency) {
      case PrizeCurrency.tl:
        return 'â‚º';
      case PrizeCurrency.dolar:
        return '\$';
      case PrizeCurrency.euro:
        return 'â‚¬';
      case PrizeCurrency.altin:
        return 'ðŸ¥‡';
      case PrizeCurrency.other:
        return campaign.customCurrency ?? '';
      default:
        return 'â‚º';
    }
  }

  void _exportWinningTickets(Campaign campaign, List<Ticket> winningTickets) {
    final exportText = StringBuffer();
    exportText.writeln('${campaign.name} - Talihli Biletler');
    exportText.writeln('Kazanan Numara: ${campaign.winningNumber}');
    exportText.writeln('Ã‡ekiliÅŸ Tarihi: ${campaign.drawDate.day}/${campaign.drawDate.month}/${campaign.drawDate.year}');
    exportText.writeln('');
    
    for (int i = 0; i < winningTickets.length; i++) {
      final ticket = winningTickets[i];
      exportText.writeln('${i + 1}. ${ticket.numbersFormatted} - ${ticket.winnerType} - ${ticket.buyerName ?? "Ä°simsiz"}');
    }
    
    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Text('ðŸ“‹ ${winningTickets.length} Talihli bilet listesi hazÄ±rlandÄ±!'),
        backgroundColor: Colors.green,
        action: SnackBarAction(
          label: 'Kopyala',
          onPressed: () {
            // Clipboard'a kopyalama iÅŸlemi burada yapÄ±lÄ±r
            ScaffoldMessenger.of(context).showSnackBar(
              SnackBar(content: Text('âœ… Liste panoya kopyalandÄ±!')),
            );
          },
        ),
      ),
    );
  }

  // ðŸ’¾ ADMIN BÄ°LETLERÄ°NÄ° KALICI OLARAK SAKLA
  Future<void> _saveSampleTickets() async {
    try {
      final prefs = await SharedPreferences.getInstance();
      final ticketsJson = _sampleTickets.map((t) => t.toJson()).toList();
      await prefs.setString('admin_sample_tickets', jsonEncode(ticketsJson));
      await prefs.setBool('admin_tickets_generated', _ticketsGenerated);
      print('ðŸ’¾ ADMIN BÄ°LETLERÄ° KAYDEDÄ°LDÄ°: ${_sampleTickets.length} bilet');
    } catch (e) {
      print('âŒ Admin bilet kaydetme hatasÄ±: $e');
    }
  }

  // ðŸ“‚ ADMIN BÄ°LETLERÄ°NÄ° GERÄ° YÃœKLE
  Future<void> _loadSampleTickets() async {
    try {
      final prefs = await SharedPreferences.getInstance();
      final ticketsStr = prefs.getString('admin_sample_tickets');
      if (ticketsStr != null) {
        final ticketsJson = jsonDecode(ticketsStr) as List;
        setState(() {
          _sampleTickets.clear();
          _sampleTickets.addAll(ticketsJson.map((json) => Ticket.fromJson(json)));
          _ticketsGenerated = prefs.getBool('admin_tickets_generated') ?? false;
        });
        
        // Ã–NEMLÄ°: Campaign service'i temizle ve sadece yÃ¼klenen biletleri ekle
        _campaignService.clearAllSystemTickets();
        for (final ticket in _sampleTickets) {
          _campaignService.addTicketToSystem(ticket);
        }
        
        print('ðŸ“‚ ADMIN BÄ°LETLERÄ° YÃœKLENDÄ°: ${_sampleTickets.length} bilet');
      }
    } catch (e) {
      print('âŒ Admin bilet yÃ¼kleme hatasÄ±: $e');
    }
  }



  // ðŸ—‘ï¸ KAMPANYA SÄ°LME VALÄ°DASYONU VE SÄ°LME FONKSÄ°YONU
  void _deleteCampaignWithValidation(Campaign campaign) {
    // 1. Validasyon kontrolleri
    final validationResult = _validateCampaignDeletion(campaign);
    
    if (!validationResult['canDelete']) {
      // Silme hatasÄ± gÃ¶ster
      _showDeletionErrorDialog(campaign, validationResult['errors']);
      return;
    }
    
    // 2. Validasyon geÃ§tiyse silme onayÄ± iste
    _showDeletionConfirmDialog(campaign);
  }

  Map<String, dynamic> _validateCampaignDeletion(Campaign campaign) {
    List<String> errors = [];
    
    // Kontrol 1: Kampanya tamamlanmÄ±ÅŸ mÄ±?
    if (!campaign.isCompleted) {
      errors.add('âŒ Kampanya henÃ¼z tamamlanmamÄ±ÅŸ. Ã–nce kampanyayÄ± bitirin.');
    }
    
    // Kontrol 2: Ã‡ekiliÅŸ sonucu girilmiÅŸ mi?
    if (campaign.winningNumber == null || campaign.winningNumber!.isEmpty) {
      errors.add('âŒ Ã‡ekiliÅŸ sonucu henÃ¼z girilmemiÅŸ. Ã–nce kazanan numarayÄ± girin.');
    }
    
    // Kontrol 3: Kampanya biletlerini al ve kontrol et
    final campaignTickets = _campaignService.getCampaignTickets(campaign.id);
    
    // Kontrol 4: Ã–denmemiÅŸ biletler var mÄ±?
    final unpaidTickets = campaignTickets.where((ticket) => 
        ticket.status == TicketStatus.sold || ticket.status == TicketStatus.unpaid
    ).toList();
    
    if (unpaidTickets.isNotEmpty) {
      errors.add('âŒ ${unpaidTickets.length} adet Ã¶denmemiÅŸ bilet bulundu. Ã–nce tÃ¼m Ã¶demeleri tamamlayÄ±n.');
    }
    
    // Kontrol 5: Kazanan biletler var mÄ± ve ikramiyeleri daÄŸÄ±tÄ±lmÄ±ÅŸ mÄ±?
    final winningTickets = campaignTickets.where((ticket) => ticket.isWinner).toList();
    
    if (winningTickets.isNotEmpty) {
      // Bu kontrolÃ¼ ÅŸimdilik atlayabiliriz Ã§Ã¼nkÃ¼ ikramiye daÄŸÄ±tÄ±m sistemi henÃ¼z yok
      // Gelecekte ikramiye daÄŸÄ±tÄ±m sistemi eklenince bu kontrol aktif edilebilir
    }
    
    // Kontrol 6: Finansal iÅŸlemler tamamlanmÄ±ÅŸ mÄ±?
    // Bu kontrolÃ¼ ÅŸimdilik basit tutuyoruz
    final campaignTicketCount = campaignTickets.length;
    if (campaignTicketCount == 0) {
      errors.add('âŒ Kampanyada hiÃ§ bilet bulunamadÄ±. Kampanya verilerinde sorun olabilir.');
    }
    
    return {
      'canDelete': errors.isEmpty,
      'errors': errors,
    };
  }

  void _showDeletionErrorDialog(Campaign campaign, List<String> errors) {
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Row(
          children: [
            Icon(Icons.error, color: Colors.red),
            SizedBox(width: 8),
            Text('Kampanya Silinemez'),
          ],
        ),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text(
              '${campaign.name} kampanyasÄ± aÅŸaÄŸÄ±daki nedenlerle silinemez:',
              style: TextStyle(fontWeight: FontWeight.bold),
            ),
            SizedBox(height: 16),
            Container(
              padding: EdgeInsets.all(12),
              decoration: BoxDecoration(
                color: Colors.red.withOpacity(0.1),
                borderRadius: BorderRadius.circular(8),
                border: Border.all(color: Colors.red.withOpacity(0.3)),
              ),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: errors.map((error) => Padding(
                  padding: EdgeInsets.only(bottom: 8),
                  child: Text(
                    error,
                    style: TextStyle(color: Colors.red[800]),
                  ),
                )).toList(),
              ),
            ),
            SizedBox(height: 16),
            Container(
              padding: EdgeInsets.all(12),
              decoration: BoxDecoration(
                color: Colors.blue.withOpacity(0.1),
                borderRadius: BorderRadius.circular(8),
              ),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  Row(
                    children: [
                      Icon(Icons.lightbulb, color: Colors.blue),
                      SizedBox(width: 8),
                      Text(
                        'Ã–neriler:',
                        style: TextStyle(fontWeight: FontWeight.bold, color: Colors.blue[800]),
                      ),
                    ],
                  ),
                  SizedBox(height: 8),
                  Text(
                    'â€¢ Ã–nce tÃ¼m iÅŸlemleri tamamlayÄ±n\n'
                    'â€¢ Ã–denmemiÅŸ biletleri tahsil edin\n'
                    'â€¢ Ã‡ekiliÅŸ sonucunu girin\n'
                    'â€¢ Kazananlara ikramiyelerini verin\n'
                    'â€¢ Sonra kampanyayÄ± silebilirsiniz',
                    style: TextStyle(color: Colors.blue[700]),
                  ),
                ],
              ),
            ),
          ],
        ),
        actions: [
          ElevatedButton(
            onPressed: () => Navigator.pop(context),
            child: Text('AnladÄ±m'),
            style: ElevatedButton.styleFrom(
              backgroundColor: Colors.red,
              foregroundColor: Colors.white,
            ),
          ),
        ],
      ),
    );
  }

  void _showDeletionConfirmDialog(Campaign campaign) {
    final campaignTickets = _campaignService.getCampaignTickets(campaign.id);
    final winningTickets = campaignTickets.where((ticket) => ticket.isWinner).toList();
    
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Row(
          children: [
            Icon(Icons.warning, color: Colors.orange),
            SizedBox(width: 8),
