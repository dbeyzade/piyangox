    if (campaigns.isNotEmpty) {
      print('ðŸ“‹ Kampanya listesi: ${campaigns.map((c) => c.name).toList()}');
    }
    
    return Padding(
      padding: EdgeInsets.all(24),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
