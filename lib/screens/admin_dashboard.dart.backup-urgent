    super.initState();
    _loadSampleData();
    _loadSampleTickets(); // Admin biletlerini yÃ¼kle
    // Eski kampanyalarÄ± temizleme - KalÄ±cÄ± veriler korunmalÄ±
  }

  void _loadSampleData() async {
    await _complaintService.addSampleComplaints();
  }

