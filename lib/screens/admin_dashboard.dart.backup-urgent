    if (trimmedAmount.isEmpty) {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(content: Text('âŒ LÃ¼tfen ikramiye tutarÄ±nÄ± girin')),
      );
      return;
    }
    
    setState(() {});
    
    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Text('âœ… Ä°kramiye tutarÄ± belirlendi: $trimmedAmount'),
        backgroundColor: Colors.green,
      ),
    );
    
    
  }

