      {'id': 'liste_yayinla', 'title': 'Liste YayÄ±nla', 'icon': Icons.publish, 'color': Colors.brown},
      {'id': 'yeni_kampanya', 'title': 'Yeni Kampanya', 'icon': Icons.add_circle, 'color': Colors.pink},
      {'id': 'kampanya_yonetimi', 'title': 'Kampanya YÃ¶netimi', 'icon': Icons.manage_accounts, 'color': Colors.deepPurple},
      {'id': 'ortak_sayisi', 'title': 'Ortak SayÄ±sÄ±', 'icon': Icons.group, 'color': Colors.lime},
